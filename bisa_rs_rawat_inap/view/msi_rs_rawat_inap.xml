	<record id="view_tree_rs_rawat_inap" model="ir.ui.view">
		<field name="name">rs_rawat_inap.tree</field>
		<field name="model">tbl_rs_rawat_inap</field>
		<field name="arch" type="xml">
			<tree >
                             <field name="waktu"/> 
                             <field name="name"/>
                             <field name="no_reg"/>
                             <field name="no_rm"/> 
                             <field name="nama_pasien"/>
                           <field name="penjamin_tipe"/>
                           <field name="kode_layanan" invisible="1"/>
                             <field name="phone"/> 
                             <field name="nama_dokter"/> 
                             <field name="jenis_layanan"/> 

                             <field name="status"/> 
			</tree>
		</field>
	</record>


        <record id="view_rs_rawat_inap_search" model="ir.ui.view">
            <field name="name">rs_rawat_inap.search.form</field>
            <field name="model">tbl_rs_rawat_inap</field>
            <field name="arch" type="xml">
               <search string="Layanan">
                    <field name="name" string="Searching" filter_domain="['|','|','|', ('name','ilike',self),('nama_pasien','ilike',self),('phone','ilike',self),('no_rm','ilike',self)]"/>
                    <field name="name" string="Nama Pasien"/>
                    <group expand="0" string="Status">
                        <filter string="No RM" name="no_rm" context="{'group_by':'no_rm'}"/>
                        <separator/>
                        <filter string="Bulan" name="tgl" context="{'group_by':'waktu:month'}"/>
                        <filter string="Tanggal" name="tgl" context="{'group_by':'waktu:day'}"/>
                        <separator/>
                        <filter string="Nama Dokter" name="nama_dokter" context="{'group_by':'nama_dokter'}"/>
                        <filter string="Jenis Layanan" name="jenis_layanan" context="{'group_by':'jenis_layanan'}"/>
                        <separator/>
                        <filter string="Status" name="status" context="{'group_by':'status'}"/>
                    </group>

                </search>
            </field>
        </record>

